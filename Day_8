def upper_lower_count(str):
    uppercase_count = 0
    lowercase_count = 0
    for x in string:
        if x.isupper():
            uppercase_count += 1
        elif x.islower():
            lowercase_count += 1
    return {'uppercase count:',uppercase_count, 'lowercase count:',lowercase_count}

string = input('Enter a string: ')
print(upper_lower_count(string))
